<phone:PhoneApplicationPage
    x:Class="Connect.LoggedMainPages.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d"
    shell:SystemTray.IsVisible="True">

    <toolkit:TransitionService.NavigationInTransition>
        <toolkit:NavigationInTransition>
            <toolkit:NavigationInTransition.Backward>
                <toolkit:TurnstileTransition Mode="BackwardIn"/>
            </toolkit:NavigationInTransition.Backward>
            <toolkit:NavigationInTransition.Forward>
                <toolkit:TurnstileTransition Mode="ForwardIn"/>
            </toolkit:NavigationInTransition.Forward>
        </toolkit:NavigationInTransition>
    </toolkit:TransitionService.NavigationInTransition>
    <toolkit:TransitionService.NavigationOutTransition>
        <toolkit:NavigationOutTransition>
            <toolkit:NavigationOutTransition.Backward>
                <toolkit:TurnstileTransition Mode="BackwardOut"/>
            </toolkit:NavigationOutTransition.Backward>
            <toolkit:NavigationOutTransition.Forward>
                <toolkit:TurnstileTransition Mode="ForwardOut"/>
            </toolkit:NavigationOutTransition.Forward>
        </toolkit:NavigationOutTransition>
    </toolkit:TransitionService.NavigationOutTransition>

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="#FFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="0,0,0,0" Background="#FFF">
            <TextBlock Text="Settings"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0" 
                       Foreground="#2C5F8C"
                       Style="{StaticResource PhoneTextTitle1Style}"/>

            <Line StrokeThickness="3" 
                  Stroke="#2C5F8C"
                  Margin="0,20,0,0"
                  X1="0" 
                  X2="1"
                  Stretch="Fill"/>
        </StackPanel>

        <!--StackPanel - place additional content here-->
        <Grid x:Name="SocialGrid" Grid.Row="1" Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <!-- La grilla tiene 5 lugares
                    Mail
                    Password
                    Facebook
                    LinkedIn
                    Integracion con el Mail
            -->
            <!-- #1 -->
            <Grid x:Name="Mail" Grid.Row="0" Margin="0,0,0,0" Background="#FFF">
                <TextBlock Text="Mail:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0" 
                       Foreground="#000"
                       Style="{StaticResource PhoneTextTitle2Style}"/>
            </Grid>

            <!-- #2 -->
            <Grid x:Name="Password" Grid.Row="1" Margin="0,0,0,0" Background="#FFF">
                <TextBlock Text="Password:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0" 
                       Foreground="#000"
                       Style="{StaticResource PhoneTextTitle2Style}"/>
            </Grid>

            <!-- #3 -->
            <Grid x:Name="Facebook" Grid.Row="2" Margin="0,0,0,0" Background="#FFF">
                <Image x:Name="FacebookImage" 
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Height="Auto"
                   Width="Auto"
                   Margin="20,20,0,20" 
                   Source="/Assets/Social/fb-icon.fw.png" />

                <TextBlock Text="Iniciar Sesión"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="20,0,40,0" 
                       Foreground="#000"
                       Style="{StaticResource PhoneTextTitle2Style}"/>
            </Grid>

            <!-- #4 -->
            <Grid x:Name="LinkedIn" Grid.Row="3" Margin="0,0,0,0" Background="#FFF">
                <Image x:Name="LinkedInImage" 
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Height="Auto"
                   Width="Auto"
                   Margin="20,20,0,20" 
                   Source="/Assets/Social/li-icon.fw.png" />

                <TextBlock Text="Iniciar Sesión"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="20,0,40,0" 
                       Foreground="#000"
                       Style="{StaticResource PhoneTextTitle2Style}"/>

            </Grid>

            <!-- #5 -->
            <Grid x:Name="IntegracionMail" Grid.Row="4" Margin="0,0,0,0" Background="#FFF">
                <Image x:Name="MailImage" 
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Height="Auto"
                   Width="Auto"
                   Margin="20,20,0,20" 
                   Source="/Assets/Social/mail.png" />

                <TextBlock Text="Iniciar Sesión"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="20,0,40,0" 
                       Foreground="#000"
                       Style="{StaticResource PhoneTextTitle2Style}"/>

            </Grid>

        </Grid>

        <Grid x:Name="SettingsPanel" Grid.Row="3" Margin="0,0,0,0" Background="#2C5F8C">

        </Grid>
    </Grid>

</phone:PhoneApplicationPage>